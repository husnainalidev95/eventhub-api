// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  USER
  ORGANIZER
  ADMIN
}

enum EventStatus {
  DRAFT
  ACTIVE
  CANCELLED
  COMPLETED
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

// User Model
model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  password      String
  role          UserRole @default(USER)
  avatar        String?
  phone         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  isActive      Boolean  @default(true)
  emailVerified Boolean  @default(false)
  companyName   String?

  // Relations
  events   Event[]
  bookings Booking[]

  @@map("users")
}

// Event Model
model Event {
  id            String      @id @default(cuid())
  title         String
  description   String      @db.Text
  category      String
  image         String?
  date          DateTime
  time          String
  city          String
  venue         String
  address       String
  organizerId   String
  organizerName String
  status        EventStatus @default(DRAFT)
  views         Int         @default(0)
  featured      Boolean     @default(false)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  organizer   User         @relation(fields: [organizerId], references: [id], onDelete: Cascade)
  ticketTypes TicketType[]
  bookings    Booking[]

  @@map("events")
}

// TicketType Model
model TicketType {
  id          String   @id @default(cuid())
  eventId     String
  name        String
  price       Float
  total       Int
  available   Int
  description String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  event    Event     @relation(fields: [eventId], references: [id], onDelete: Cascade)
  bookings Booking[]

  @@map("ticket_types")
}

// Booking Model
model Booking {
  id            String        @id @default(cuid())
  userId        String
  eventId       String
  ticketTypeId  String
  quantity      Int
  totalAmount   Float
  status        BookingStatus @default(PENDING)
  holdId        String?       // Reference to Redis hold ID
  paymentId     String?       // Stripe payment ID (future)
  paymentStatus String?       // Payment status (future)
  bookingCode   String        @unique // Unique booking reference
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  event      Event      @relation(fields: [eventId], references: [id], onDelete: Cascade)
  ticketType TicketType @relation(fields: [ticketTypeId], references: [id], onDelete: Cascade)

  @@map("bookings")
}
